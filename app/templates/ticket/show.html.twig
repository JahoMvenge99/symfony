{% extends 'base.html.twig' %}

{% block title %}Ticket{% endblock %}

{% block body %}
    <h1>Ticket</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ ticket.id }}</td>
            </tr>
            <tr>
                <th>Label</th>
                <td>{{ ticket.label }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ ticket.description }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_ticket_index') }}"><button type="button" class="btn btn-info">back to list</button></a>

    <a href="{{ path('app_ticket_edit', {'id': ticket.id}) }}"><button type="button" class="btn btn-warning">edit</button></a>

    {{ include('ticket/_delete_form.html.twig') }}
{% endblock %}
